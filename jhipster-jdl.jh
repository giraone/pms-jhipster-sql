// --- --- --- ENUMERATIONS --- --- ---

enum GenderType {
    UNKNOWN, MALE, FEMALE
}

// --- --- --- ENITIES --- --- ---

/**
 * The Company entity.
 */
entity Company {
    externalId String required unique,
	name String,
    postalCode String,
	city String,
	streetAddress String
}

/**
 * The Employee entity.
 */
entity Employee {
	surname String required,
	givenName String,
	dateOfBirth LocalDate,
	gender GenderType,
    postalCode String,
	city String,
	streetAddress String
}

/**
 * Normalized names of the employee (Hint: We do not generated relations for performance reasons)
 */
entity EmployeeName {
    ownerId Long required,
    nameKey String required,
	nameValue String required
}

// --- --- --- RELATIONSHIPS --- --- ---

relationship ManyToOne {
	Employee{company required} to Company
}

// relationship OneToMany {
//	Company{employees} to Employee{}
// }

relationship ManyToMany {
  Company{user} to User{company}
}

// --- --- --- MISC --- --- ---

// Set pagination options
//paginate Employee with infinite-scroll
paginate Employee with pagination
paginate Company with pagination

// Use Data Transfer Objects (DTO)
dto * with mapstruct

// Set service options to all except few
service all with serviceImpl
// service all with serviceImpl except Employee

